<div class="container">
  <h4 class="mt-5 bg-light">新規会員登録</h4>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前" %><br>
          （姓）<%= f.text_field :last_name %>
          （名）<%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ" %><br>
          （セイ）<%= f.text_field :last_name_kana %>
          （メイ）<%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :"メールアドレス"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"郵便番号（ハイフンなし）" %><br>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <%= f.label :"住所" %><br>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :"電話番号（ハイフンなし）" %><br>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <%= f.label :"パスワード（６文字以上）" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success mt-3" %>
        </div>
      <% end %>

      <h4 class="mt-5 bg-light">既に登録済みの方</h4>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>
</div>
