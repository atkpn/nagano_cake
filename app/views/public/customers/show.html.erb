<div class="container">
  <h4 class="my-5 mx-auto bg-light">マイページ</h4>

  <div class="row">
    <h5 class="mr-5">登録情報</h5>
    <%= link_to "編集する", customers_infomation_edit_path, class: "btn btn-success" %>

    <table class="table table-bordered mt-3">
      <tr>
        <th>氏名</th>
        <td>
          <%= current_customer.last_name %>
          <%= current_customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>カナ</th>
        <td>
          <%= current_customer.last_name_kana %>
          <%= current_customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td>
          <%= current_customer.postal_code %>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td>
          <%= current_customer.address %>
        </td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td>
          <%= current_customer.telephone_number %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= current_customer.email %>
        </td>
      </tr>
    </table>

    <h5 class="mr-5">注文履歴</h5>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>