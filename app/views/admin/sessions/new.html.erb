<div class="container">
  <h4 class="mt-5 d-inline bg-light">管理者ログイン</h4>
  <div class="row">
    <div class="mx-auto mt-3">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", size: 40 %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password", size: 40 %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>

