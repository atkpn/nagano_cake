<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light d-inline">注文履歴一覧</h4>
  </div>

  <div class="row">
    <div class="mx-auto">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%-m/%-d %H:%M:%S'), admin_order_path(order.id) %></td>
            <td>
              <%= order.customer.last_name + order.customer.first_name %>
            </td>
            <td><%= order.amount_total %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mx-auto">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>