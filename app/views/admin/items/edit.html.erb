<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light d-inline">商品編集</h4>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :image, "商品画像" %></td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "商品名" %></td>
              <td><%= f.text_field :name, size: 40 %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "商品説明" %></td>
              <td><%= f.text_area :introduction, size: "40x10" %></td>
            </tr>
            <tr>
              <td><%= f.label :price, "税抜価格" %></td>
              <td><%= f.text_field :price, size: 40 %>円</td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "変更を保存", class: "btn btn-success mt-5 mx-auto" %>
      <% end %>
    </div>
  </div>
</div>