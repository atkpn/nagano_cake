<div class="container">
  <h4 class="my-5 mx-auto bg-light">商品編集</h4>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
        <div class="field">
          <%= f.label :"商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="field">
          <%= f.label :"商品名" %>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :"商品説明" %>
          <%= f.text_area :introduction %>
        </div>

        <div class="field">
          <%= f.label :"税抜価格" %>
          <%= f.number_field :price %>
        </div>

        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-success mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>