<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light d-inline">商品詳細</h4>
  </div>

  <div class="row mt-5">
    <div class="col-md-4">
      <%= image_tag @item.get_image(200, 300) %>
    </div>
    <div class="col-md-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>
              税込価格<br>（税抜価格）
            </td>
            <td>
              <%= @item.add_tax_price.to_s(:delimited) %>
              (<%= @item.price.to_s(:delimited) %>)円
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto mt-5">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>