<div class="container">
  <h4 class="my-5 mx-auto bg-light">商品一覧</h4>
  <%= link_to new_admin_item_path do %>
    <i class="fa-duotone fa-plus"></i>
  <% end %>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>