<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4 class="my-5 bg-light d-inline">商品一覧</h4>
    </div>
    <div class="col-md-2">
      <%= link_to "+", new_admin_item_path, class: "shadow-sm btn rounded-circle" %>
    </div>
  </div>

  <div class="row mt-3">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id), class: "link-dark" %></td>
          <td><%= item.price.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>