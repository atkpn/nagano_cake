<div class="container">
  <div class="row">
    <h4 class="my-5 bg-light d-inline">商品新規登録</h4>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :image, "商品画像" %></td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :"商品名" %></td>
              <td><%= f.text_field :name, :placeholder => "商品名", size: 40 %></td>
            </tr>
            <tr>
              <td><%= f.label :"商品説明" %></td>
              <td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します", size: "40x10" %></td>
            </tr>
            <tr>
              <td><%= f.label :"税抜価格" %></td>
              <td><%= f.text_field :price, :placeholder => "1000", size: 40 %>円</td>
            </tr>
          </tbody>
        </table>
        <%= f.submit "新規登録", class: "btn btn-success mt-5 mx-auto" %>
      <% end %>
    </div>
  </div>
</div>