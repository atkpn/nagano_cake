<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/aa8c5f352f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navber navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <%= link_to "ながのCAKE", root_path, class: "navbar-brand" %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <!--管理者サインイン後-->
              <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "商品一覧", admin_items_path %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">会員一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">注文履歴一覧</a>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>

              <!--ユーザーサインイン後-->
              <% elsif customer_signed_in? %>
              <li class="nav-item">
                <%= link_to "マイページ", customers_my_page_path %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">商品一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">カート</a>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
              </li>

              <!--サインイン前-->
              <% else %>
              <li class="nav-item">
                <%= link_to "About", about_path %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">商品一覧</a>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_customer_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
